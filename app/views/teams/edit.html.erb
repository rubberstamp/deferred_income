<h1 class="text-2xl font-bold mb-4">Edit Team</h1>

<%= form_with(model: @team, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50' %>
  </div>

  <div>
    <%= form.submit 'Update Team', class: 'inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
  </div>
<% end %>

<%= link_to 'Back', teams_path, class: 'btn btn-secondary' %>