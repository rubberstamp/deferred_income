<h1 class="text-2xl font-bold mb-4">Import Charges</h1>

<%= form_with url: import_charges_path, local: true, multipart: true do |form| %>
  <div class="mb-4">
    <%= form.label :file, "Upload CSV", class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :file, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div class="mb-4">
    <h2 class="text-lg font-bold">Field Mapping</h2>
    <p class="text-gray-600">Map your CSV columns to Charge fields.</p>
    <div>
      <label for="source" class="block text-sm font-medium text-gray-700">Source</label>
      <%= select_tag "mapping[source]", options_for_select([['Select', ''], ['Source', 'source'], ['Transaction ID', 'transaction_id'], ['Amount', 'amount'], ['Currency', 'currency'], ['Recognition Start Date', 'recognition_start_date'], ['Recognition End Date', 'recognition_end_date']]), {}, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>
    <!-- Repeat for other fields as necessary -->
  </div>

  <div>
    <%= form.submit "Import", class: 'bg-blue-600 text-white px-4 py-2 rounded-md' %>
  </div>
<% end %>