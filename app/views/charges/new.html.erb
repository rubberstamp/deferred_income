<h1 class="text-2xl font-bold mb-4">Import Charges</h1>

<%= form_with url: import_charges_path, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :file, class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :file, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div>
    <%= form.submit "Import", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="flex space-x-4 mt-8">
  <div class="flex-1">
    <h1 class="text-2xl font-bold mb-4">New Charge</h1>

    <%= form_with model: @charge, local: true do |form| %>

      <%= render 'form', form: form %>
      <div class="mb-4">
        <%= form.submit "Create Charge", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>
</div>