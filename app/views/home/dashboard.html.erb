<div class="overflow-x-auto">
<h1 class="text-2xl font-bold mb-4">Deferred Income</h1>
<p class="text-xl mb-6">
  <%= number_to_currency current_user.current_team.mrr(Date.today) %>
</p>


<h2> Calendar</h2>
<div class="grid grid-cols-3 gap-4">
  <% @mrr_by_month.each do |month, total_mrr| %>
    <div class="border border-gray-300 p-4 rounded-lg">
      <h2 class="font-bold text-lg"><%= month.strftime("%B %Y") %></h2>
      <p class="text-xl"><%= link_to  number_to_currency(total_mrr), charges_path(date: month) %></p>
    </div>
  <% end %>
</div>
</div>