<h1 class="text-2xl font-bold mb-4">Add Integration</h1>

<%= form_with(model: @integration, local: true, class: 'space-y-4') do |form| %>
  <div>
    <%= form.label :integration_type, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.select :integration_type, [['Stripe', 'stripe']], {}, class: 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50' %>
  </div>

  <div>
    <%= form.label :api_key, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :api_key, class: 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50' %>
  </div>

  <div>
    <%= form.label :team_id, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.collection_select :team_id, @teams, :id, :name, { prompt: 'Select a Team' }, class: 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50' %>
  </div>

  <div>
    <%= form.submit 'Add Integration', class: 'inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
  </div>
<% end %>